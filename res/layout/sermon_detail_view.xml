<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget35"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/sermon_back"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<ImageView android:id="@+id/image" 
		android:layout_width="fill_parent"
		android:layout_height="0dp" 
		android:layout_weight="1" 
		android:scaleType="fitXY" />

	<TextView android:id="@+id/description" 
		style="@style/DescriptionText"
		android:layout_width="fill_parent" 
		android:maxLines="20" 
		android:scrollbars="vertical"
		android:layout_height="0dp" 
		android:layout_weight="1" 
		/>

	<RelativeLayout android:id="@+id/widget114" android:gravity="center" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="25dip" android:paddingTop="10dip">
		<ImageButton android:id="@+id/playVideo"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="20dip" android:paddingRight="20dip"
			android:layout_alignParentTop="true" android:src="@drawable/play_video" android:background="@null" />

		<ImageButton android:id="@+id/playAudio"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="20dip" android:paddingRight="20dip"
			android:layout_alignParentTop="true" android:layout_toRightOf="@+id/playVideo"
			android:src="@drawable/play_audio" android:background="@null" />

	</RelativeLayout>
</LinearLayout>