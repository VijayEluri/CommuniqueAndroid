<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget35"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/sermon_back"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageView 
		android:id="@+id/image" 
		android:layout_width="fill_parent"
		android:layout_height="0dp" 
		android:layout_weight="1" 
		android:scaleType="center" 
		android:src="@drawable/church_logo"/>

	<TextView 
		android:id="@+id/description" 
		android:layout_width="fill_parent" 
		android:maxLines="20" 
		android:scrollbars="vertical"
		android:layout_height="0dp" 
		android:layout_weight="1"
		style="@style/DescriptionText"
		/>

	<RelativeLayout android:id="@+id/widget114" android:gravity="center" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="25dip" android:paddingTop="10dip">
		<ImageButton android:id="@+id/facebook"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:layout_alignParentTop="true" android:src="@drawable/button_facebook" android:background="@null" />

		<ImageButton android:id="@+id/twitter"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentTop="true" android:layout_toRightOf="@+id/facebook"
			android:src="@drawable/button_twitter" android:background="@null" />
			
		<ImageButton android:id="@+id/email"
			android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_toRightOf="@+id/twitter"
			android:layout_alignParentTop="true" android:src="@drawable/button_email" android:background="@null" />

		<ImageButton android:id="@+id/phone"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentTop="true" android:layout_toRightOf="@+id/email"
			android:src="@drawable/button_phone" android:background="@null" />
	</RelativeLayout>
	<RelativeLayout android:id="@+id/widget114" android:gravity="center" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="25dip" android:paddingTop="10dip" >
		<ImageButton android:id="@+id/website" android:paddingLeft="10dip" android:paddingRight="10dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:layout_alignParentTop="true" android:src="@drawable/button_website" android:background="@null" />

		<ImageButton android:id="@+id/map" android:paddingLeft="10dip" android:paddingRight="10dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentTop="true" android:layout_toRightOf="@+id/website"
			android:src="@drawable/button_map" android:background="@null" />
	</RelativeLayout>
</LinearLayout>